<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/pinkHightToobar</item>
        <item name="colorAccent">@color/pinkToolbar</item>
    </style>

    <style name="ToolbarDefault" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/pinkToolbar</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="ToolbarText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TapLayoutDefault" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextDefault">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/pinkToolbar</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleTextDefault">
        <item name="android:text">@string/app_title</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/pinkToolbar</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditTextDefault">
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">number</item>
        <item name="android:textColorHint">@color/pink</item>
        <item name="android:textSize">16sp</item>
        <item name="colorError">@color/red</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="ButtonDefault">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TextMensagem">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAdapter">
        <item name="android:textColor">@color/pink</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleTextBrinks">
        <item name="android:text">@string/brinks</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/pinkToolbar</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>